@using System.Configuration
@model Core.ViewModels.ResponseViewModel

@{
    ViewBag.Title = "Api Tool -> Table";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@Html.Partial("Partials/_partnerDetails")

<form action="/table/invoke" method="POST">
    <fieldset>
        <label for="restaurantId">Restaurant Id:</label>
        <input type="text" name="restaurantId" value="@Html.Raw(ConfigurationManager.AppSettings["RestaurantId"])">
    </fieldset>

    <fieldset>
        <label for="partySize">Party size:</label>
        <input type="text" name="partySize" value="@Html.Raw(ConfigurationManager.AppSettings["PartySize"])">
    </fieldset>

    <fieldset>
        <label for="dateTime">Date time:</label>
        <input type="text" name="dateTime" value="@Html.Raw(new DateTime(DateTime.Now.AddDays(1).Year, DateTime.Now.AddDays(1).Month, DateTime.Now.AddDays(1).Day, 19, 00, 00))">
    </fieldset>

    <div class="buttons">
        <input type="submit" class="btn btn-go" value="Get results">
        <a href="/restaurant" class="start-again">Start again</a>
    </div>
</form>

@Html.Partial("Partials/_output", Model)
