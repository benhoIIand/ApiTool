@using System.Configuration
@model Core.ViewModels.ResponseViewModel

@{
    ViewBag.Title = "Api Tool -> Make";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@Html.Partial("Partials/_partnerDetails")

<form action="/make/invoke" method="POST">
    <fieldset>
        <label for="restaurantId">Restaurant Id:</label>
        <input type="text" name="restaurantId" value="@Html.Raw(ConfigurationManager.AppSettings["RestaurantId"])">
    </fieldset>

    <fieldset>
        <label for="partySize">Party size:</label>
        <input type="text" name="partySize" value="@Html.Raw(ConfigurationManager.AppSettings["PartySize"])">
    </fieldset>

    <fieldset>
        <label for="dateTime">Date time:</label>
        <input type="text" name="dateTime" value="@Html.Raw(new DateTime(DateTime.Now.AddDays(1).Year, DateTime.Now.AddDays(1).Month, DateTime.Now.AddDays(1).Day, 19, 00, 00))">
    </fieldset>

    <fieldset>
        <label for="resultsKey">Results key:</label>
        <input type="text" name="resultsKey">
    </fieldset>

    <fieldset>
        <label for="securityId">Security Id:</label>
        <input type="text" name="securityId">
    </fieldset>

    <fieldset>
        <label for="slotLockId">Slotlock Id:</label>
        <input type="text" name="slotLockId">
    </fieldset>

    <fieldset>
        <label for="offerId">Offer Id:</label>
        <input type="text" name="offerId" value="0">
    </fieldset>

    <fieldset>
        <label for="offerTitle">Offer title:</label>
        <input type="text" name="offerTitle" value="">
    </fieldset>

    <fieldset>
        <label for="email">email address:</label>
        <input type="text" name="email" class="long" value="api_tool_test@opentable.com">
    </fieldset>

    <div class="buttons">
        <input type="submit" class="btn btn-go" value="Get results">
        <a href="/restaurant" class="start-again">Start again</a>
    </div>
</form>

@Html.Partial("Partials/_output", Model)